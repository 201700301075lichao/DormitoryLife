<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/aliceblue">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:text="费用缴纳"
        android:textColor="#00BFFF"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:text="你的钱包准备好了吗！"
        android:textColor="#00BFFF"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/pay_electricity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/navitext"
        android:drawablePadding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border_line_while"
        android:gravity="center"
        android:text="电费缴纳"/>

    <Button
        android:id="@+id/pay_water"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_line_while"
        android:gravity="center"
        style="@style/navitext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="8dp"
        android:text="水费缴纳"/>

    <Button
        android:id="@+id/pay_intent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_line_while"
        android:gravity="center"
        style="@style/navitext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="8dp"
        android:text="网费缴纳"/>



    <Button
        android:id="@+id/pay_card"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="8dp"
        style="@style/navitext"

        android:background="@drawable/border_line_while"
        android:gravity="center"
        android:text="校园卡费用缴纳"/>

    <Button
        android:id="@+id/pay_fees"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="8dp"
        style="@style/navitext"

        android:background="@drawable/border_line_while"
        android:gravity="center"
        android:text="学费缴纳"/>
</LinearLayout>