<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navi_list"
    tools:context=".CFragment"

    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/aliceblue">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:text="宿舍生活小功能"
        android:textColor="#00BFFF"
        android:textSize="30sp"/>
    <ImageView
        android:id="@+id/iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/login_icon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/notive_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/navitext"
        android:drawablePadding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border_line_while"
        android:gravity="center"
        android:text="查看公告"/>

    <Button
        android:id="@+id/money_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_line_while"
        android:gravity="center"
        style="@style/navitext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="8dp"
        android:text="费用缴纳"/>

    <Button
        android:id="@+id/service_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_line_while"
        android:gravity="center"
        style="@style/navitext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="8dp"
        android:text="故障维修"/>

    <Button
        android:id="@+id/washing_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/navitext"
        android:drawablePadding="8dp"
        android:background="@drawable/border_line_while"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="洗衣机使用情况"/>

    <Button
        android:id="@+id/wave_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/navitext"
        android:drawablePadding="8dp"
        android:background="@drawable/border_line_while"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="微波炉使用情况 "/>

    <Button
        android:id="@+id/dor_notice_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        style="@style/navitext"
        android:drawablePadding="8dp"
        android:background="@drawable/border_line_while"
        android:gravity="center"
        android:text="公寓通知"/>





</LinearLayout>